{
  "name": "@micra/core-test-utils",
  "version": "0.1.0-next.5",
  "description": "Mocked implementation of Micra's core interfaces",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/micrajs/core-test-utils.git"
  },
  "author": "Olavo Amorim Santos<olavo.santos@micra.dev>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/micrajs/community/issues?q=is:issue+is:open+label:%22Project:+core-test-utils%22+label:%22Type:+fix%22"
  },
  "exports": {
    ".": {
      "import": "./index.mjs",
      "require": "./index.js",
      "types": "./index.d.ts"
    },
    "./environment": {
      "import": "./environment/index.mjs",
      "require": "./environment/index.js",
      "types": "./environment/index.d.ts"
    },
    "./application": {
      "import": "./application/index.mjs",
      "require": "./application/index.js",
      "types": "./application/index.d.ts"
    },
    "./configuration": {
      "import": "./configuration/index.mjs",
      "require": "./configuration/index.js",
      "types": "./configuration/index.d.ts"
    },
    "./error": {
      "import": "./error/index.mjs",
      "require": "./error/index.js",
      "types": "./error/index.d.ts"
    },
    "./event-emitter": {
      "import": "./event-emitter/index.mjs",
      "require": "./event-emitter/index.js",
      "types": "./event-emitter/index.d.ts"
    },
    "./kernel": {
      "import": "./kernel/index.mjs",
      "require": "./kernel/index.js",
      "types": "./kernel/index.d.ts"
    },
    "./service-container": {
      "import": "./service-container/index.mjs",
      "require": "./service-container/index.js",
      "types": "./service-container/index.d.ts"
    },
    "./service-provider": {
      "import": "./service-provider/index.mjs",
      "require": "./service-provider/index.js",
      "types": "./service-provider/index.d.ts"
    },
    "./spy": {
      "import": "./spy/index.mjs",
      "require": "./spy/index.js",
      "types": "./spy/index.d.ts"
    }
  },
  "scripts": {
    "build:code": "vite build --config .viterc.ts",
    "build:types": "tsc -p tsconfig.json",
    "build": "concurrently 'pnpm:build:*'",
    "dev:code": "pnpm build:code -- --watch",
    "dev:types": "nodemon --ext 'ts,tsx' --exec 'pnpm build:types'",
    "dev": "concurrently 'pnpm:dev:*'",
    "lint": "eslint --ext .ts,.tsx .",
    "prepare:husky": "husky install .config/husky",
    "test:coverage": "vitest run --coverage --config .viterc.ts",
    "test:dev": "vitest --config .viterc.ts",
    "test": "vitest run --config .viterc.ts",
    "version:prerelease": "npm version prerelease --preid=next --allow-same-version && git push --follow-tags"
  },
  "peerDependencies": {
    "@micra/core": "next",
    "@micra/faker": "next"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.0",
    "@micra/commit-lint-config": "next",
    "@micra/core": "next",
    "@micra/eslint-config": "next",
    "@micra/faker": "next",
    "@micra/typescript-config": "next",
    "@micra/vite-config": "next",
    "@types/node": "^18.15.7",
    "@vitest/coverage-c8": "^0.29.7",
    "c8": "^7.11.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.11.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "tsc-alias": "^1.8.4",
    "typescript": "^5.0.2",
    "vite": "^4.2.1",
    "vitest": "^0.29.7"
  },
  "dependencies": {
    "tinyspy": "^2.1.0"
  }
}
